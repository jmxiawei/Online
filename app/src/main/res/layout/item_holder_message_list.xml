<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_icon"
        style="@style/home_video_preview_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/v_margin"
        android:orientation="vertical">


        <cn.samir.online.views.CustomFontTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="官方通知"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_margin"
            android:gravity="top"
            android:orientation="horizontal">

            <cn.samir.online.views.CustomFontTextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1周前"
                android:textColor="@color/text_color_gray"
                android:textSize="12sp"/>


            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="30dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_drak_next"/>
        </LinearLayout>


        <cn.samir.online.views.CustomFontTextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/v_margin"
            android:layout_marginRight="@dimen/h_margin"
            android:layout_marginTop="@dimen/v_margin"
            android:maxLines="10"
            android:singleLine="false"
            android:text="sdadakdl;akda;ldkasl;dka;ldkal;dka;ldka;ldka;ldka;lsdka;lsdka;lsdkas;ldka;ldska;lsdka;dlka;"
            android:textColor="@color/text_color_gray"
            android:textSize="12sp"
            app:font_type="thin"/>

    </LinearLayout>


</LinearLayout>