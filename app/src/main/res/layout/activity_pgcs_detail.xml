<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingtoolbarlayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">


            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_header"
                    style="@style/round_img"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32dp"
                    fresco:placeholderImage="@color/color_white"/>


                <cn.samir.online.views.CustomFontTextView
                    android:id="@+id/tv_author_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Mike"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    app:font_type="moreBold"/>

                <cn.samir.online.views.CustomFontTextView
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_author_name"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/v_margin"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textColor="@color/text_color_gray"
                    android:textSize="12sp"
                    fresco:font_type="thin"/>


                <cn.samir.online.views.CustomFontTextView
                    android:id="@+id/btn_follow"
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/tv_category"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/v_margin"
                    android:background="@drawable/btn_round_corner_selector"
                    android:gravity="center"
                    android:text="+关注"
                    android:textColor="@color/text_color_black"
                    app:font_type="moreBold"/>



                <cn.samir.online.views.CustomFontTextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_follow"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/v_margin"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textColor="@color/text_color_gray"
                    android:textSize="12sp"
                    fresco:font_type="thin"/>


            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="top"
                android:minHeight="40dp"
                app:layout_collapseMode="pin"
                app:titleMarginTop="8dp"
                app:titleTextAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
                />

            <cn.samir.online.views.CustomTabLayout
                android:id="@+id/tabLayout"
                style="@style/TabLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


</android.support.design.widget.CoordinatorLayout>
