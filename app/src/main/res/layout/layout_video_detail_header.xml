<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <cn.samir.online.views.FlowCustomTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginBottom="@dimen/v_margin"
        android:layout_marginLeft="@dimen/h_margin"
        android:gravity="center_vertical"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        app:font_type="moreBold" />

    <cn.samir.online.views.FlowCustomTextView
        android:id="@+id/tv_cate_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/h_margin"
        android:gravity="center_vertical|start"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        app:font_type="thin" />

    <cn.samir.online.views.FlowCustomTextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/h_margin"
        android:layout_marginRight="@dimen/h_margin"
        android:layout_marginTop="@dimen/v_margin"
        android:gravity="center_vertical|start"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/color_white"
        android:textSize="12sp"
        app:font_type="thin" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/v_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ll_fav"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_fav"
                android:layout_width="@dimen/action_icon_size"
                android:layout_height="@dimen/action_icon_size"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_action_favorites_added_without_padding" />

            <cn.samir.online.views.FlowCustomTextView
                android:id="@+id/tv_fav_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/h_margin"
                android:layout_marginRight="@dimen/h_margin"
                android:text="9999"
                android:textColor="@color/color_white"
                android:textSize="12sp"
                app:font_type="thin" />


        </LinearLayout>

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="@dimen/action_icon_size"
                android:layout_height="@dimen/action_icon_size"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_action_share_without_padding" />

            <cn.samir.online.views.FlowCustomTextView
                android:id="@+id/tv_share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/h_margin"
                android:layout_marginRight="@dimen/h_margin"
                android:textColor="@color/color_white"
                android:textSize="12sp"
                app:font_type="thin" />

        </LinearLayout>

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ll_reply"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_reply"
                android:layout_width="@dimen/action_icon_size"
                android:layout_height="@dimen/action_icon_size"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_action_reply_nopadding" />

            <cn.samir.online.views.FlowCustomTextView
                android:id="@+id/tv_reply_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/h_margin"
                android:layout_marginRight="@dimen/h_margin"
                android:textColor="@color/color_white"
                android:textSize="12sp"
                app:font_type="thin" />


        </LinearLayout>

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ll_download"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_download"
                android:layout_width="@dimen/action_icon_size"
                android:layout_height="@dimen/action_icon_size"
                android:scaleType="fitCenter"
                android:src="@mipmap/action_download_cut" />

            <cn.samir.online.views.FlowCustomTextView
                android:id="@+id/tv_download_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/h_margin"
                android:layout_marginRight="@dimen/h_margin"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="12sp"
                app:font_type="thin" />


        </LinearLayout>


    </LinearLayout>

    <View style="@style/line" />


    <LinearLayout
        android:id="@+id/ll_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_header"
            style="@style/round_img"
            android:layout_width="@dimen/card_header_img_size"
            android:layout_height="@dimen/card_header_img_size" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h_margin"
            android:layout_weight="1"
            android:orientation="vertical">


            <cn.samir.online.views.FlowCustomTextView
                android:id="@+id/tv_author_name"
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="dddddd"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                app:font_type="moreBold" />


            <cn.samir.online.views.FlowCustomTextView
                android:id="@+id/tv_author_desc"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="dddddd"
                android:textColor="@color/color_white"
                android:textSize="12sp"
                app:font_type="thin" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_follow"
            style="@style/style_button_follow"
            android:textColor="@color/color_white"/>

    </LinearLayout>


    <View
        android:id="@+id/line_author"
        style="@style/line" />


</LinearLayout>